{{!-- Sign Up form --}}
<div class="ui tiny modal sign-up-modal">
    <div class="ui segment">
        <h2 class="ui image right floated header">
            <img class="image" src="\public\images\sds-mini-logo.png">
            <div class="content">Novo Utilizador</div>
        </h2>
        <div class="ui clearing divider"></div>
        <form class="ui large form sign-up" method="POST" action="/signup">
            <div class="ui segment">
                <div class="field">
                    <label class="dark-color label">Nome</label>
                    <div class="ui left icon input">
                        <i class="user md icon"></i>
                        <input type="text" name="name" placeholder="Nome que será visível">
                    </div>
                </div>
                <div class="field">
                    <label class="dark-color label">Identificador do Sistema Digital de Saúde</label>
                    <div class="ui left icon input">
                        <i class="key icon"></i>
                        <input type="text" name="sdsID" placeholder="SDS ID">
                    </div>
                </div>
                <div class="field">
                    <label class="dark-color label">Palavra-Passe</label>
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input type="password" name="password" placeholder="Palavra-Passe">
                    </div>
                </div>
            </div>
            <button class="ui positive right labeled icon submit button">Registar
                <i class="checkmark icon"></i>
            </button>
            <div class="ui clearing divider"></div>
            <div class="ui error message"></div>
        </form>
    </div>
</div>